<resources>
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorSecondary">@color/secondary_main_color</item>
        <item name="backgroundColor">@color/discord_grey</item>
        <item name="android:statusBarColor">@color/main_color</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppTheme.Holo_green_dark" parent="AppTheme" >
        <item name="colorPrimary">@color/green</item>
        <item name="colorSecondary">@color/secondrary_green</item>
    </style>

    <style name="AppTheme_Red" parent="AppTheme" >
        <item name="colorPrimary">@color/red</item>
        <item name="colorSecondary">@color/secondary_red</item>
    </style>

    <style name="AppTheme_Violet" parent="AppTheme" >
        <item name="colorPrimary">@color/purple</item>
        <item name="colorSecondary">@color/secondary_purple</item>
    </style>

    <style name="AppTheme_Grey" parent="AppTheme" >
        <item name="colorPrimary">@color/grey</item>
        <item name="colorSecondary">@color/secondary_grey</item>
    </style>

</resources>