<resources>
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="backgroundColor">@color/discord_grey</item>
        <item name="android:statusBarColor">@color/main_color</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:background"> @null </item>
    </style>

    <style name="AppTheme.Night" parent="AppTheme" >
        <item name="colorPrimary">@color/main_color_dark</item>
    </style>

    <style name="AppTheme.Holo_green_dark" parent="AppTheme" >
        <item name="colorPrimary">@android:color/holo_green_dark</item>
    </style>

    <style name="AppTheme_Red" parent="AppTheme" >
        <item name="colorPrimary">@android:color/holo_red_dark</item>
    </style>

    <style name="AppTheme_Violet" parent="AppTheme" >
        <item name="colorPrimary">@android:color/holo_purple</item>
    </style>
</resources>